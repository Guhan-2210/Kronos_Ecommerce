{
  "name": "ecommerce-auth-worker",
  "version": "1.0.0",
  "description": "Production-grade authentication microservice for Cloudflare Workers",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "migrate": "npm run migrate:users && npm run migrate:sessions",
    "migrate:users": "wrangler d1 execute auth-db --file=./src/migrations/001_users.sql",
    "migrate:sessions": "wrangler d1 execute auth-db --file=./src/migrations/002_sessions.sql",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' mocha 'test/**/*.test.js'",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' c8 mocha 'test/**/*.test.js'"
  },
  "keywords": [
    "cloudflare-workers",
    "authentication",
    "jwt",
    "auth",
    "microservice"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@microlabs/otel-cf-workers": "^1.0.0-rc.52",
    "@opentelemetry/api": "^1.9.0",
    "itty-router": "^5.0.0",
    "joi": "^17.11.0",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "wrangler": "^4.40.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "sinon": "^17.0.1",
    "c8": "^8.0.1"
  }
}
